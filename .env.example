# ========================================
# Regulatory Capital Fairness Agentic RAG
# Environment Configuration Template
# ========================================

# ----------------
# OpenAI API Configuration
# ----------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ----------------
# Mesh API Configuration
# ----------------
# Base URL for the consumer-risk-model-mesh API
MESH_API_BASE_URL=http://localhost:5000
MESH_API_VERSION=v1
MESH_API_TIMEOUT=30

# ----------------
# Vector Database Configuration
# ----------------
# Chroma DB settings
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_AUTH_TOKEN=your-chroma-token-here

# FAISS settings (if using FAISS instead of Chroma)
FAISS_INDEX_PATH=./data/faiss_indices

# ----------------
# Application Settings
# ----------------
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# ----------------
# LLM Configuration
# ----------------
LLM_MODEL=gpt-4o  # gpt-4o, gpt-4-turbo, gpt-3.5-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# Embeddings Model
EMBEDDINGS_MODEL=text-embedding-3-large

# ----------------
# RAG Configuration
# ----------------
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_RETRIEVAL_K=5

# ----------------
# Data Paths
# ----------------
DATA_DIR=./data
REGULATORY_DOCS_PATH=./data/regulatory_docs
KNOWLEDGE_BASE_PATH=./data/regulatory_knowledge_base

# ----------------
# Security
# ----------------
# JWT Secret for API authentication (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ----------------
# Database (Optional - for storing conversation history)
# ----------------
DATABASE_URL=postgresql://user:password@localhost:5432/rag_db

# ----------------
# Monitoring & Observability
# ----------------
LANGSMITH_API_KEY=your-langsmith-key-here  # Optional: for LangSmith tracing
LANGSMITH_PROJECT=reg-capital-fairness-rag

# ----------------
# Docker Configuration
# ----------------
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_NAME=reg-capital-fairness-rag
DOCKER_IMAGE_TAG=latest
